<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:text="Unit Trust Calculator"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etInvestedAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Invested Fund Amount (RM)"
            android:inputType="numberDecimal"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <EditText
            android:id="@+id/etDividendRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Annual Dividend Rate (%)"
            android:inputType="numberDecimal"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/etInvestedAmount"/>

        <EditText
            android:id="@+id/etMonths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Months (Max 12)"
            android:inputType="number"
            android:maxLength="2"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/etDividendRate"/>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Dividend"
            android:padding="15dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etMonths"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset / Clear"
            android:backgroundTint="#D32F2F"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/btnCalculate"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvMonthlyResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Dividend: RM 0.00"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/btnReset"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Dividend: RM 0.00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#3F51B5"
            app:layout_constraintTop_toBottomOf="@id/tvMonthlyResult"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>